{
  "name": "react-hooks",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://elegardo.github.io/react-hooks",
  "scripts": {
    "test": "jest --coverage --color",
    "start": "webpack-dev-server --mode development",
    "build": "npm run test && webpack --mode production",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "<rootDir>/__config__/setupTests.js"
    ],
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/components/**/*.{js,tsx}",
      "!src/components/**/__tests__/*.{js,tsx}"
    ],
    "transform": {
      ".js": "./node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "\\.(css|scss|png)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "dependencies": {
    "axios": "^0.18.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.0-beta.6",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^2.1.0",
    "history": "^4.7.2",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.5.0",
    "path": "^0.12.7",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "semantic-ui-react": "^0.85.0",
    "url-loader": "^1.1.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "babel-jest": "^24.8.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "gh-pages": "^2.0.1",
    "jest": "^24.8.0",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.0"
  }
}
